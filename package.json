    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@topmonks/blendid": "git://github.com/topmonks/blendid.git",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/node": "^14.14.10",
    "@types/node-fetch": "^2.5.7",
    "@types/ramda": "^0.27.32",
    "@types/whatwg-url": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chokidar": "^3.4.3",
    "chrome-webstore-upload-cli": "^1.2.0",
    "dotenv-cli": "^4.0.0",
    "esbuild": "^0.8.16",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-lit": "^1.2.4",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "gulp-esbuild": "^0.2.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "web-ext": "^5.0.0",
    "web-ext-submit": "^5.4.0"
  },
  "resolutions": {
    "lodash": "npm:lodash@4.17.19",
    "object-path": "npm:object-path@0.11.5"
  },
  "scripts": {
    "clean": "rm -rf dist/ extension-dist/",
    "build": "run-all build:extension -p build:firefox build:chrome",
    "start": "run-p start:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-p lint:*",
    "lint:website": "eslint ./www.hlidacshopu.cz",
    "lint:api": "eslint ./api.hlidacshopu.cz/",
    "lint:extension": "yarn eslint ./extension; web-ext lint",
    "lint:firefox": "web-ext lint --config web-ext-config.firefox.js",
    "build:extension": "esbuild ./extension/content.mjs --bundle --outfile=extension/content.js",
    "watch:extension": "node ./scripts/watch-extension.mjs",
    "prebuild:firefox": "cp -R extension/ ./extension-dist/; cat ./extension/manifest.json | jq 'del(.background)' > ./extension-dist/manifest.json",
    "build:firefox": "web-ext build --config web-ext-config.firefox.js --overwrite-dest",
    "postbuild:firefox": "rename -f 's/hl_da_shop_/firefox-extension/g' dist/*.zip",
    "start:firefox": "web-ext run --config web-ext-config.firefox.js --browser-console",
    "publish:firefox": "web-ext-submit --channel=listed --config web-ext-config.firefox.js",
    "build:chrome": "web-ext build --overwrite-dest",
    "postbuild:chrome": "rename -f 's/hl_da_shop_/chrome-extension/g' dist/*.zip",
    "start:chrome": "web-ext run --target=chromium",
    "publish:chrome": "webstore upload --auto-publish --extension-id=plmlonggbfebcjelncogcnclagkmkikk --source=dist/chrome-extension-$(PRINT=manifest ./version.sh).zip",
    "open:osx": "open './apple/osx/hlidac shopu/hlidac shopu.xcodeproj'",
    "start:www.hlidacshopu.cz": "BLENDID_CONFIG_PATH=./www.hlidacshopu.cz/config/ dotenv blendid",
    "build:www.hlidacshopu.cz": "BLENDID_CONFIG_PATH=./www.hlidacshopu.cz/config/ dotenv blendid -- build"
  },
  "workspaces": [
    "extension",
    "lib",
    "www.hlidacshopu.cz/src/javascripts"
  ]
}
